{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            { "allowTemplateLiterals": true }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0,
        "no-alert": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true,
        "jasmine": true,
        "protractor": true
    },
    "globals": {
        "angular": true,
        "_": true,
        "d3": true,
        "inject": true,
        "sinon": true,
        "Q": true,
        "chai": true
    },
    "extends": "eslint:recommended"
}
